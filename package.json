{
    "name": "@tmp-evaluation-tasks/rps-game",
    "version": "0.1.3",
    "description": "Rock-Scissors-Paper game for the evaluation task",
    "keywords": [],
    "license": "ISC",
    "author": "",
    "bin": {
        "rps-game": "./lib/bin/cli.js",
        "rps-game-server": "./lib/bin/rest.js"
    },
    "files": [
        "lib",
        "client/dist"
    ],
    "scripts": {
        "build": "npm run build:types && npm run build:js && npm run build:client",
        "build:client": "cd client && parcel build ./index.html",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "build:types": "tsc --emitDeclarationOnly",
        "dev:rest": "npm run build && node lib/restApp.js",
        "lint": "eslint .",
        "prepublishOnly": "npm run build",
        "rest": "node lib/bin/rest",
        "start": "node lib/bin/cli",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "watch:client": "cd client && parcel ./index.html"
    },
    "dependencies": {
        "babel-plugin-transform-typescript-metadata": "^0.3.1",
        "chalk": "^4.1.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "inquirer": "^7.3.3",
        "inversify": "^5.0.5",
        "ioredis": "^4.19.4",
        "md5": "^2.3.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-decorators": "^7.12.12",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.9",
        "@types/express-session": "^1.17.3",
        "@types/inquirer": "^7.3.1",
        "@types/ioredis": "^4.17.10",
        "@types/jest": "^26.0.19",
        "@types/md5": "^2.2.1",
        "@types/node": "^14.14.19",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "axios": "^0.21.1",
        "eslint": "^7.17.0",
        "jest": "^26.6.3",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-jss": "^10.5.0",
        "typescript": "^4.1.3"
    },
    "engines": {
        "node": ">=14"
    }
}
